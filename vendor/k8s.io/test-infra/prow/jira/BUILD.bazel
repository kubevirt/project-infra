load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "jira.go",
        "metrics.go",
    ],
    importmap = "kubevirt.io/project-infra/vendor/k8s.io/test-infra/prow/jira",
    importpath = "k8s.io/test-infra/prow/jira",
    visibility = ["//visibility:public"],
    deps = [
        "//vendor/github.com/andygrunwald/go-jira:go_default_library",
        "//vendor/github.com/hashicorp/go-retryablehttp:go_default_library",
        "//vendor/github.com/prometheus/client_golang/prometheus:go_default_library",
        "//vendor/github.com/sirupsen/logrus:go_default_library",
        "//vendor/k8s.io/apimachinery/pkg/util/sets:go_default_library",
        "//vendor/k8s.io/test-infra/prow/simplifypath:go_default_library",
        "//vendor/k8s.io/test-infra/prow/version:go_default_library",
    ],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
