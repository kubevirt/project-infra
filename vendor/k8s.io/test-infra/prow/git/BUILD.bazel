package(default_visibility = ["//visibility:public"])

load(
    "@io_bazel_rules_go//go:def.bzl",
    "go_library",
)

go_library(
    name = "go_default_library",
    srcs = ["git.go"],
    importmap = "kubevirt.io/project-infra/vendor/k8s.io/test-infra/prow/git",
    importpath = "k8s.io/test-infra/prow/git",
    deps = [
        "//vendor/github.com/sirupsen/logrus:go_default_library",
        "//vendor/k8s.io/test-infra/prow/github:go_default_library",
    ],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [
        ":package-srcs",
        "//prow/git/localgit:all-srcs",
        "//prow/git/v2:all-srcs",
    ],
    tags = ["automanaged"],
)
