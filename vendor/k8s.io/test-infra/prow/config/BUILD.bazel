filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [
        ":package-srcs",
        "//prow/config/jobtests:all-srcs",
        "//prow/config/org:all-srcs",
        "//prow/config/secret:all-srcs",
    ],
    tags = ["automanaged"],
)

filegroup(
    name = "fixtures",
    srcs = glob(["*.yaml"]),
    visibility = ["//visibility:private"],
)
