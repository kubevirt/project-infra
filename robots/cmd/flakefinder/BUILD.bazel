load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = [
        "index.go",
        "main.go",
        "report.go",
    ],
    embedsrcs = [
        "report.gohtml",
        "reportCSV.gotemplate",
    ],
    importpath = "kubevirt.io/project-infra/robots/cmd/flakefinder",
    visibility = ["//visibility:public"],
    deps = [
        "//robots/pkg/flakefinder:go_default_library",
        "//robots/pkg/flakefinder/github:go_default_library",
        "//vendor/cloud.google.com/go/storage:go_default_library",
        "//vendor/github.com/google/go-github/v28/github:go_default_library",
        "//vendor/golang.org/x/oauth2:go_default_library",
        "//vendor/google.golang.org/api/iterator:go_default_library",
        "//vendor/k8s.io/test-infra/prow/config/secret:go_default_library",
        "//vendor/k8s.io/test-infra/prow/flagutil:go_default_library",
    ],
)

load("@io_bazel_rules_docker//go:image.bzl", "go_image")

go_image(
    name = "app",
    embed = [":go_default_library"],
)

load("@io_bazel_rules_docker//container:container.bzl", "container_push")

container_push(
    name = "push",
    format = "Docker",
    image = ":app",
    registry = "quay.io",
    repository = "kubevirtci/flakefinder",
    tag = "{DOCKER_TAG}",
)

go_binary(
    name = "flakefinder",
    embed = [":go_default_library"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "go_default_test",
    srcs = [
        "index_test.go",
        "main_suite_test.go",
        "main_test.go",
        "report_test.go",
    ],
    embed = [":go_default_library"],
    deps = [
        "//robots/pkg/flakefinder:go_default_library",
        "//robots/pkg/validation:go_default_library",
        "//vendor/github.com/onsi/ginkgo/v2:go_default_library",
        "//vendor/github.com/onsi/gomega:go_default_library",
    ],
)
